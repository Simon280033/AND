<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".View.FindFellowshipsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/findFellowshipsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Fellowships:"
        android:textSize="22dp"
        android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/findFellowshipsHeader"
            android:padding="10dp"
            android:background="@drawable/item_bg"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/filterHeader"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filters:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/webShopFilterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filterHeader"
                android:layout_weight="1"
                android:text="Web shop:"
                android:textSize="22dp"
                android:textStyle="bold" />
        <Spinner
            android:id="@+id/webShopFilterSpinner"
            android:layout_alignLeft="@+id/webShopFilterHeader"
            android:layout_below="@+id/webShopFilterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

            <TextView
                android:id="@+id/categoryFilterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/filterHeader"
                android:layout_weight="1"
                android:text="Category:"
                android:textSize="22dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/categoryFilterSpinner"
                android:layout_alignRight="@+id/categoryFilterHeader"
                android:layout_below="@id/categoryFilterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/amountFilterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryFilterSpinner"
                android:layout_weight="1"
                android:text="Amount needed:"
                android:textSize="22dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amountFilterTextEdit"
                android:inputType="number"
                android:hint="in DKK..."
                android:layout_marginLeft="20dp"
                android:layout_alignLeft="@+id/amountFilterHeader"
                android:layout_below="@id/amountFilterHeader"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/distanceFilterHeader"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryFilterSpinner"
                android:layout_weight="1"
                android:text="Within (meters):"
                android:textSize="22dp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/distanceFilterTextEdit"
                android:inputType="number"
                android:hint="in meters..."
                android:layout_marginRight="20dp"
                android:layout_alignRight="@+id/distanceFilterHeader"
                android:layout_below="@id/amountFilterHeader"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/amountFilterTextEdit">
            </Button>
        </RelativeLayout>

        <ListView
        android:id="@+id/fellowshipsList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1" />
    </LinearLayout>
</ScrollView>