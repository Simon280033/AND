<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andproject">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="FellowShippers"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.andproject">

        <activity android:name=".View.SignInActivity" />
        <activity android:name=".View.ChatActivity" />
        <activity android:name=".View.FellowshipActivity" />
        <activity android:name=".View.FellowshipRequestsActivity" />
        <activity android:name=".View.FindFellowshipsActivity" />
        <activity android:name=".View.FellowshipJoinActivity" />
        <activity android:name=".View.NewFellowshipActivity" />
        <activity android:name=".View.FellowshipsActivity" />
        <activity android:name=".View.ProfileViewActivity" />
        <activity android:name=".View.MainActivity" />
        <activity
            android:name=".View.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.ProfileEditorActivity" />
    </application>

</manifest>